<Window x:Class="Banananana.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banananana"
        mc:Ignorable="d"
        Title="Banananana" Height="616.83" Width="843.696" Closing="Window_Closing" Icon="Resources/appicon.ico"
        Style="{StaticResource WinAll}">
    <Window.Background>
        <ImageBrush ImageSource="Resources/bananas-close-up.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="stackPanel" Orientation="Horizontal" Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border HorizontalAlignment="Right" Margin="8" VerticalAlignment="Top" Width="36" Background="#FFE8E8E8" CornerRadius="8" >
                <Button x:Name="addPileButton" Content="+" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0" FontSize="28" VerticalContentAlignment="Top" RenderTransformOrigin="0.5,0.5" Padding="1,-4,1,1" Click="addTaskButton_Click" Height="34"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>

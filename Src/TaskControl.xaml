<UserControl x:Class="Banananana.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banananana"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" Width="300" MouseDoubleClick="UserControl_MouseDoubleClick" Focusable="True">
    <Border x:Name="border" Height="Auto" Margin="4" Background="White" CornerRadius="8" BorderThickness="4" VerticalAlignment="Top" >
        <Border BorderThickness="8" Height="Auto">
            <StackPanel Height="Auto" Orientation="Horizontal">
                <RichTextBox x:Name="richTextBox" Height="Auto" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="#FFFF7400" FontSize="18" AcceptsTab="True" VerticalScrollBarVisibility="Disabled" BorderThickness="0" VerticalAlignment="Bottom" TextChanged="richTextBox_TextChanged" SelectionOpacity="0.7" LostKeyboardFocus="richTextBox_LostKeyboardFocus" Width="242">
                    <RichTextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="editTitleMenuItem" Header="Edit..." Click="editTextMenuItem_Click"/>
                        </ContextMenu>
                    </RichTextBox.ContextMenu>
                    <FlowDocument/>
                </RichTextBox>
                <Rectangle Fill="#FFD4D4D4" Margin="0" Width="2"/>
                <Grid Height="24" HorizontalAlignment="Right" Margin="0">
                    <Button x:Name="deleteButton" Content="❌" Margin="0" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" FontSize="16" Padding="1,-5,1,1" Foreground="#FF919191" Click="deleteButton_Click"/>
                </Grid>

            </StackPanel>

        </Border>

    </Border>
</UserControl>

<UserControl x:Class="Banananana.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banananana"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="400">
    <Border Height="Auto" Margin="6" Background="#FFE0E0E0" CornerRadius="8" BorderThickness="0" VerticalAlignment="Top" >
        <Border BorderThickness="8" Height="Auto">
            <StackPanel Height="Auto" Orientation="Vertical">
                <RichTextBox x:Name="richTextBox" Height="Auto" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="#FFFFB533" FontSize="18" AcceptsTab="True" VerticalScrollBarVisibility="Disabled" BorderThickness="0" VerticalAlignment="Bottom" TextChanged="richTextBox_TextChanged">
                    <FlowDocument>
                        <Paragraph>
                            <Run Foreground="Black" Text=""/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>

            </StackPanel>

        </Border>

    </Border>
</UserControl>

<UserControl x:Class="Banananana.ExternalLinkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banananana"
             mc:Ignorable="d" Height="24" Width="24" Margin="0,0,8,0">
    <Grid Background="White">
        <Image x:Name="linkImage" Source="Resources/externallinkicon.png" Cursor="Hand" Opacity="0.25" MouseEnter="LinkImage_MouseEnter" MouseLeave="LinkImage_MouseLeave"/>
    </Grid>
</UserControl>

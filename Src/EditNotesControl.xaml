<UserControl x:Class="Banananana.EditNotesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banananana"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid Margin="0,0,0,0" Background="#FFC5C5C5">
        <Label x:Name="closeButton" Content="❌" Margin="0,7,7,7" HorizontalAlignment="Right" BorderBrush="{x:Null}" BorderThickness="0" FontSize="16" Padding="1,-2,1,0" Foreground="Black" RenderTransformOrigin="0.531,0.504" VerticalAlignment="Top" Cursor="Hand" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" Opacity="0.25" MouseEnter="closeButton_MouseEnter" MouseLeave="closeButton_MouseLeave" MouseLeftButtonDown="closeButton_MouseLeftButtonDown"/>

    </Grid>
</UserControl>

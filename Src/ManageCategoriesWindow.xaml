<Window x:Class="Banananana.ManageCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banananana"
        mc:Ignorable="d"
        Title="Manage categories..." Height="394.952" Width="462.614" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Categories:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="0"/>
        <ListView x:Name="categoriesListView" Margin="10,31,10,144">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Color" Width="100"/>
                    <GridViewColumn Header="Title" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="90,0,0,117" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="10,0,0,117" VerticalAlignment="Bottom" Width="75" Click="addButton_Click"/>

    </Grid>
</Window>
